{
    "severity_actions": {
        "HIGH": "BLOCK",
        "MEDIUM": "WARN",
        "LOW": "LOG"
    },
    "context_keywords": [
        "prod",
        "production",
        "live",
        "main",
        "master",
        "key"
    ],
    "patterns": [
        {
            "name": "AWS Access Key",
            "regex": "(A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}",
            "severity": "HIGH"
        },
        {
            "name": "AWS Secret Key",
            "regex": "(?i)aws_secret_access_key['\"]?\\s*(=|:)\\s*['\"]?[A-Za-z0-9\\/+=]{40}['\"]?",
            "severity": "HIGH"
        },
        {
            "name": "GitHub Token",
            "regex": "(ghp|gho|ghu|ghs|ghr)_[A-Za-z0-9_]{36}",
            "severity": "HIGH"
        },
        {
            "name": "Private Key",
            "regex": "-----BEGIN\\s?((RSA|DSA|EC|OPENSSH|PGP)\\s?)?PRIVATE\\s?KEY-----",
            "severity": "HIGH"
        },
        {
            "name": "Generic Password",
            "regex": "(?i)(password|passwd|secret|api_key|apikey)['\"]?\\s*(=|:)\\s*['\"][A-Za-z0-9@#$%^&+=]{8,}['\"]",
            "severity": "MEDIUM"
        }
    ]
}